COMPILER SharpAlg

/*--------------------------------------------------------------------------*/
CHARACTERS
  letter = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz".
  digit = "0123456789".
  cr  = '\r'.
  lf  = '\n'.
  tab = '\t'.

TOKENS
  ident  = letter {letter | digit}.
  number = digit {digit}.

IGNORE cr + lf + tab

PRODUCTIONS

SharpAlg 						(. int result; .)
= Expression<out result>		(. this.result = result; .)
.

Expression<out int result>		(. int right; Operation operation; .)			
= Term<out result>
	{
	AddOp<out operation> 
	Term<out right>				(. if(operation == Operation.Add) result += right; else result -= right; .)
	}
.

AddOp<out Operation operation>
=                        (. operation = Operation.Add; .)
  ( '+'
  | '-'                  (. operation = Operation.Subtract; .)
  )
.

Term<out int number>
= number						(. number = Int32.Parse(t.val); .)
.

END SharpAlg.
